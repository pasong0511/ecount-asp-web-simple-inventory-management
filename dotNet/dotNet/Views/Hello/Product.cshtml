
@{
    //Layout = "~/Views/Shared/_Layout.cshtml";

}

@section Scripts {
    <script src="~/Scripts/main.js"></script>
}

<div class="contents">
    <div class="userInputArea" style="display:flex">
        <div class="userInputInfo">
            <label for="name">품목명</label>
            <input type="text" name="name" required />
        </div>
        <div class="userInputProductInfo" style="display:flex">
            <div>
                <input type="radio" name="product-type" value="RawMaterial" checked="checked"/>원재료
                <input type="radio" name="product-type" value="Product" />제품
                <input type="radio" name="product-type" value="Goods" />상품
            </div>
            <input type="number" class="safe-quantity" placeholder="안전개수">
            <button class="submit-btn">저장</button>
        </div>
    </div>
    <div class="productResults viewTable">
        <table border="1">
            <thead>
                <tr>
                    <th>품목명</th>
                    <th>타입</th>
                    <th>안전개수</th>
                    <th>옵션</th>
                </tr>
            <thead />
            <tbody>
                <!-- 줄 시작 -->
                <tr>
                    <td>감자</td>
                    <td>상품</td>
                    <td>100</td>
                </tr>
                <!--  줄 끝 -->
                <!-- 줄 시작 -->
                <tr>
                    <td>감자</td>
                    <td>상품</td>
                    <td>40</td>
                </tr>
                <!--  줄 끝 -->
            </tbody>
        </table>
        <div>수정</div>
        <div class="temp-modify" style="display:flex">
            <div class="modify-info">
                <label for="name">품목명</label>
                <input type="text" name="name" class="modify-name" required />
            </div>
            <div class="modify-select" style="display:flex">
                <div>
                    <input type="radio" name="product-type" value="RawMaterial" checked="checked"/>원재료
                    <input type="radio" name="product-type" value="Product" />제품
                    <input type="radio" name="product-type" value="Goods" />상품
                </div>
                <input type="number" class="modify-safe-quantity" placeholder="안전개수">
                <button class="submit-btn">수정</button>
            </div>
            
        </div>
    </div>
</div>