
@{
    //Layout = "~/Views/Shared/_Layout.cshtml";

}

@section Scripts {
    <script src="~/Scripts/purchase.js"></script>
}

<div class="contents">
    <div class="user-input-area">
        <div style="font-weight:800">등록</div>
        <div class="user-input-control" style="white-space:nowrap">


            <label for="client">거래처명</label>
            <select name="client" class="purchase-client-name"></select>

            <label for="product">제품명</label>
            <select name="product" class="purchase-product-name"></select>

            <label for="quantity">수량</label>
            <input type="number" class="purchase-product-quantity" required />

            <label for="date">날짜</label>
            <input type="date" class="purchase-product-date" />

            <button class="submit-btn">저장</button>
        </div>



        <div style="font-weight:800">수정</div>
        <div class="user-modify-control" style="display:flex">
            <div class="client-modify-info" style="white-space:nowrap">


                <label for="client">거래처명</label>
                <select name="client" class="modify-client-name"></select>

                <label for="product">제품명</label>
                <select name="product" class="modify-product-name"></select>


                <label for="quantity">수량</label>
                <input type="number" class="modify-purchase-quantity" required />

                <label for="date">날짜</label>
                <input type="date" class="modify-purchase-date" />

                <button class="modify-submit-btn">수정</button>
            </div>
        </div>
        <div style="font-weight:800">조회</div>
        <div class="user-view-control" style="display:flex">
            <span>조회기준일</span>
            <input type="date" />
            <button>조회</button>
        </div>
    </div>
    <div class="product-results view-table">
        <table border="1">
            <thead>
                <tr>
                    <th>거래처코드</th>
                    <th>거래처명</th>
                    <th>품목명</th>
                    <th>품목타입</th>
                    <th>개수</th>
                    <th>날짜</th>
                    <th>옵션</th>
                </tr>
            <thead />
            <tbody>
                <!-- 줄 시작 -->
                <tr>
                    <td>삼성</td>
                    <td>감자</td>
                    <td>100</td>
                    <td>2022-11-11</td>
                </tr>
                <!--  줄 끝 -->
                <!-- 줄 시작 -->
                <tr>
                    <td>엘지</td>
                    <td>감자</td>
                    <td>100</td>
                    <td>2022-11-11</td>
                </tr>
                <!--  줄 끝 -->
            </tbody>
        </table>
    </div>
</div>
