
@{
    //Layout = "~/Views/Shared/_Layout.cshtml";

}

@section Scripts {
    <script src="~/Scripts/purchase.js"></script>
}

<div class="contents">
    <div class="user-input-area">
        <div>등록</div>
        <div class="user-input-control" style="white-space:nowrap">
            <label for="name">거래처명</label>
            <input type="text" name="client" class="purchase-client-name" required />

            <label for="name">제품명</label>
            <input type="text" name="name" class="purchase-product-name" required />

            <label for="quantity">수량</label>
            <input type="number" class="purchase-product-quantity" required />

            <label for="date">날짜</label>
            <input type="date" class="purchase-product-date" />

            <button class="submit-btn">저장</button>
        </div>

        <div>조회</div>
        <div class="user-view-control" style="display:flex">
            <span>조회기준일</span>
            <input type="date" />
            <button>조회</button>
        </div>

        <div>수정</div>
        <div class="user-modify-control" style="display:flex">
        </div>
    </div>
    <div class="product-results view-table">
        <table border="1">
            <thead>
                <tr>
                    <th>거래처코드</th>
                    <th>거래처명</th>
                    <th>품목명</th>
                    <th>품목타입</th>
                    <th>개수</th>
                    <th>날짜</th>
                    <th>옵션</th>
                </tr>
            <thead />
            <tbody>
                <!-- 줄 시작 -->
                <tr>
                    <td>삼성</td>
                    <td>감자</td>
                    <td>100</td>
                    <td>2022-11-11</td>
                </tr>
                <!--  줄 끝 -->
                <!-- 줄 시작 -->
                <tr>
                    <td>엘지</td>
                    <td>감자</td>
                    <td>100</td>
                    <td>2022-11-11</td>
                </tr>
                <!--  줄 끝 -->
            </tbody>
        </table>
    </div>
</div>
